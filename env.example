# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5175

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Secrets
JWT_SECRET=your-super-secret
JWT_SECRET_SELLER=your_seller_jwt_secret_key_here

# Email Configuration (for OTP and password reset)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_ENV=sandbox


# ==========================================
# FRONTEND/BACKEND URLs (for CORS & WebSocket)
# ==========================================
# PRODUCTION DEPLOYMENT URLs - Update these on Render/Vercel
# Customer Frontend (Shop/E-commerce)
FRONTEND_URL=http://localhost:5173
# PRODUCTION: https://your-customer-app.vercel.app

# Admin Frontend (Admin Dashboard)
ADMIN_FRONTEND_URL=http://localhost:5174
# PRODUCTION: https://your-admin-app.vercel.app

# Backend URL (for Socket.IO and API)
BACKEND_URL=http://localhost:5175
# PRODUCTION: https://your-backend.onrender.com

# Socket.IO Configuration
# These URLs are used for WebSocket connections (real-time features)
# Make sure they match your deployed frontend/backend URLs

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Cookie Secret
COOKIE_SECRET=your-cookie-secret

# MSG91 Configuration (for SMS)
MSG91_WIDGET_ID=your_msg91_widget_id
MSG91_TOKEN_AUTH=your_msg91_auth_token
